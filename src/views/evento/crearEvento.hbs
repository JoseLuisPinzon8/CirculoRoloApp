    <div class="py-5">
      <h2>Crear evento</h2>
      <p class="lead">Ingresar información del evento</p>
    </div>

    <div class="row">
      <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-muted">Proximos eventos</span>
          <span class="badge badge-secondary badge-pill">5</span>
        </h4>
        <ul class="list-group mb-3">
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">Evento 1</h6>
              <small class="text-muted">Fecha evento 1</small>
            </div>
            <span class="text-muted">tipo</span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">Evento 2 </h6>
              <small class="text-muted">Fecha evento 2 </small>
            </div>
            <span class="text-muted">tipo</span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">Evento 3 </h6>
              <small class="text-muted">Fecha evento 3 </small>
            </div>
            <span class="text-muted">tipo</span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">Evento 4 </h6>
              <small class="text-muted">Fecha evento 4 </small>
            </div>
            <span class="text-muted">tipo</span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">Evento 5 </h6>
              <small class="text-muted">Fecha evento 5 </small>
            </div>
            <span class="text-muted">tipo</span>
          </li>

      </div>

      <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Información evento</h4>
        <form class="needs-validation" novalidate="" action="/crearEvento" method="POST">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="firstName">Nombre evento</label>
              <input type="text" class="form-control" name="nombreEvento" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <label for="lastName">Organizador</label>
              <input type="text" class="form-control" name="organizador" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="state">Tipo de evento</label>
              <select class="custom-select d-block w-100" name="tipo" required="" >
                <option value="">Tipo...</option>
                <option>Conciertos</option>
                <option>Cultura</option>
                <option>Comedias</option>
              </select>
              <div class="invalid-feedback">
                Please provide a valid state.
              </div>
            </div>

            <div class="col-md-4 mb-3">
              <label for="firstName">Fecha</label>
              <input type="text" class="form-control" name="fecha" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-md-4 mb-3">
              <label for="firstName">Duración</label>
              <input type="text" class="form-control" name="duracion" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-md-3 mb-3">
              <label for="firstName">Capacidad</label>
              <input type="text" class="form-control" name="capacidad" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-md-4 mb-3">
              <label for="firstName">Costo</label>
              <input type="text" class="form-control" name="costo" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-md-5 mb-3">
              <label for="firstName">URL imagen</label>
              <input type="text" class="form-control" name="image" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="input-group col-md-12 mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text">Descripción</span>
              </div>
              <textarea class="form-control" aria-label="With textarea" name="descripcion"></textarea>
            </div>
          </div>

          <div class="mb-3">
            <label for="address">Lugar</label>
            <input type="text" class="form-control" name="lugar" placeholder="Dirección " required="">
            <div class="invalid-feedback">
              Please enter your shipping address.
            </div>
          </div>

          <hr class="mb-4">
          <button class="btn btn-primary btn-lg btn-block" type="submit">Confirmar</button>
        </form>
      </div>
    </div>

  </div>

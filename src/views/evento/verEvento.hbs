    <div class="container">

  <div class="row">

        <div class="col-md-8 blog-main">
          {{#each results}}
          <h1 class="pb-3 mb-4 font-italic border-bottom">
            {{even_nombre}}
          </h1>
          <div class="col-md-12 order-md-1">
            <img src={{even_foto}} width="500" height="500">
          </div>
          <div class="row featurette">
              <div class="col-md-7 order-md-2">

                <h2 class="text-muted">{{even_categoria}}</h2>
                <h5 class="featurette-heading">Fecha: <span class="text-muted">{{even_fecha}}.</span></h5>
                <h5 class="featurette-heading">Duración: <span class="text-muted">{{even_duracion}} horas.</span></h5>
                <h5 class="featurette-heading">Lugar: <span class="text-muted">{{even_lugar}}</span></h5>
                <h5 class="featurette-heading">Capacidad: <span class="text-muted">{{even_capacidad}} personas.</span></h5>
              </div>
            </div>



          <div class="blog-post">
            <h2 class="blog-post-title"></h2>
            <p class="blog-post-meta">Organizado por:  <a >Usuario #{{even_idUsuario}}</a></p>
          </div><!-- /.blog-post -->



        </div><!-- /.blog-main -->

        <aside class="col-md-4 blog-sidebar">
          <div class="p-3 mb-3 bg-light rounded">
            <h4 class="font-italic">Acerca de</h4>
            <p class="mb-0">{{even_descripcion}}.</p>
          </div>

          
          <div class="p-3">



          </div>
          {{/each}}
        </aside><!-- /.blog-sidebar -->

      </div>
